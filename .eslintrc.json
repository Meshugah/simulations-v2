{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": ["standard", "prettier"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": ["error",
            {
                "singleQuote": true,
                "semi": false,
                "jsxSingleQuote": true,
                "eqeqeq": false
            }],
        "eqeqeq": "off"
    }
}
